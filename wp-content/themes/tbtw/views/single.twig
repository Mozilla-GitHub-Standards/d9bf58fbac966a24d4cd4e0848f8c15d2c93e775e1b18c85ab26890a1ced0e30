{% extends "layout.twig" %}

{% block content %}

    {% include "partials/hero-main.twig" %}

    <div class="container content">
        <div class="row">

            {% include "partials/social-share.twig" %}

            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <h1>{{post.title}}</h1>

                {{post.content|wpautop}}

                {% if post.post_type != "page" %}
                    {% if post.tags %}
                        <div class="post--tags">
                            {% for tag in post.tags %}
                                <a href="{{tag.link}}">{{tag.name}}</a>
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endif %}

            </div>
        </div>

        {% include "partials/pagination-next-prev.twig" %}

    </div>

    {% if post.post_type == "post" %}
      
    {% endif %}

    {% endblock %}
