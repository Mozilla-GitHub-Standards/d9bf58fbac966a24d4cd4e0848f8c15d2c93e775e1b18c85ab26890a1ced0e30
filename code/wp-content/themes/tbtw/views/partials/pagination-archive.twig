{% set prev_text = "Previous" %}
{% set next_text = "Next" %}

{% if pagination.prev or pagination.next %}
  <div class="row prev-next">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          <div class="row">
            <div class="prev col-xs-6">
              {% if pagination.prev %}
                  <a href="{{ pagination.prev.link }}" class="btn btn-primary btn-prev">&larr; {{ prev_text }} </a>
              {% endif %}
          </div>
          <div class="next col-xs-6">
              {% if pagination.next %}
                  <a href="{{ pagination.next.link }}"  class="btn btn-primary btn-next">{{ next_text }} &rarr;</a>
              {% endif %}
          </div>
        </div>
      </div>
  </div>
{% endif %}