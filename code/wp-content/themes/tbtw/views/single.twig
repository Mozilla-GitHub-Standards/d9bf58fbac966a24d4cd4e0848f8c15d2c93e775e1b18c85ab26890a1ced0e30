{% extends "layout.twig" %}

{% block content %}

    {% include "partials/hero-sub.twig" %}

    <div class="container container-padding content{% if post.post_type == "post" %} post{% endif %}{% if post.post_type == "page" %} page{% endif %}">
        <div class="row">

            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

              {{post.content|wpautop}}
              
              {% if post.post_type == "post" %}
                <div class="post-info">
                  <time>{{post.date|date("F j, Y")}}</time>
                  {% if post.author %}<br>By <a href="{{ post.author.link }}">{{ post.author.nickname }}</a>{% endif %}
                  {% if post.tags %}
                      <div class="post-tags">
                          {% for tag in post.tags %}
                              <a href="{{tag.link}}" class="btn btn-small btn-info">{{tag.name}}</a>
                          {% endfor %}
                      </div>
                  {% endif %}
                </div>
              {% endif %}
              
              
            </div>
        </div>

        {% include "partials/pagination-next-prev.twig" %}

    </div>

    {% include "partials/page-feature-double.twig" %}

    {% endblock %}
